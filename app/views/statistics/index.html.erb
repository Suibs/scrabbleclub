<section id="users" class="mb-5">
  <div class="container">
    <div class"row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                    <th scope="col">Ranking</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Second Name</th>
                    <th scope="col">Number of Win</th>
                    <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    <% i = 1 %>
                    <% @top10.each do |user| %>
        
                        <tr>
                            <td>
                                <%= i %>
                                <% i+= 1 %>
                            </td> 
                            <td>
                                <%= user.user.first_name %>
                            </td>
                            <td>
                                <%= user.user.second_name %>
                            </td>
                            <td>
                                <%= user.number_of_win %>
                            </td>

                            <td>
                                <%= link_to user.user do %>
                                    Check Profile
                                <% end %>
                            </td>

                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
  </div>
</section>